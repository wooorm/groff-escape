{
  "name": "groff-escape",
  "version": "1.0.0",
  "description": "Unicode characters to Groff commands",
  "license": "MIT",
  "keywords": [
    "unicode",
    "groff",
    "command"
  ],
  "repository": "https://github.com/wooorm/groff-escape",
  "bugs": "https://github.com/wooorm/groff-escape/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "engines": {
    "node": ">=0.11.0"
  },
  "dependencies": {},
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "devDependencies": {
    "bail": "^1.0.1",
    "concat-stream": "^1.5.2",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "tape": "^4.4.0",
    "tar": "^3.1.5",
    "xo": "^0.18.1"
  },
  "scripts": {
    "build-generate": "node build",
    "build-md": "remark . -qfo",
    "build": "npm run build-generate && npm run build-md",
    "lint": "xo",
    "test-api": "node test",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "quote-props": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
