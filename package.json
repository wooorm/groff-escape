{
  "name": "groff-escape",
  "version": "0.0.0",
  "description": "Unicode characters to Groff commands",
  "license": "MIT",
  "keywords": [
    "unicode",
    "groff",
    "command"
  ],
  "repository": "https://github.com/wooorm/groff-escape",
  "bugs": "https://github.com/wooorm/groff-escape/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "engines": {
    "node": ">=0.11.0"
  },
  "dependencies": {},
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "devDependencies": {
    "d3-dsv": "^1.0.1",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.4.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-generate": "bash build.sh",
    "build-md": "remark . --quiet --frail",
    "build": "npm run build-generate && npm run build-md",
    "lint": "xo",
    "test-api": "node test",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "xo": {
    "space": true,
    "ignores": [
      "groff-escape.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
